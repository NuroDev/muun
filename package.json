{
  "name": "muun",
  "productName": "Muun",
  "version": "1.1.1",
  "author": "Meadowcottage",
  "description": "Live Twitter Dashboard",
  "license": "GPL-3.0",
  "main": "./dist/electron/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/muunapp/muun.git"
  },
  "scripts": {
    "build": "node scripts/build.js && electron-builder",
    "build:dir": "node scripts/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node scripts/build.js",
    "build:web": "cross-env BUILD_TARGET=web node scripts/build.js",
    "dev": "node scripts/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config scripts/webpack.renderer.config.js",
    "postinstall": "npm run lint:fix"
  },
  "build": {
    "productName": "muun",
    "appId": "space.muun.app",
    "directories": {
      "output": "build/out"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "background": "build/muun-background@2x.png",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ],
      "window": {
        "width": 494,
        "height": 270
      }
    },
    "mac": {
      "icon": "build/muun-icon.icns"
    },
    "win": {
      "icon": "build/muun-icon.ico"
    }
  },
  "dependencies": {
    "copy-text-to-clipboard": "^1.0.3",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.11",
    "electron-store": "^1.3.0",
    "is-online": "^7.0.0",
    "is-up": "^2.0.0",
    "node-twitter-api": "^1.8.0",
    "raven-js": "^3.20.1",
    "twitter": "^1.7.1",
    "vue": "^2.4.2",
    "vue-electron": "^1.0.6",
    "vue-loading-bar": "^1.0.0",
    "vue-router": "^2.5.3",
    "vue-scrollto": "^2.8.0",
    "vue-twitter-counter": "^0.2.1",
    "vuedraggable": "^2.15.0",
    "vuetify": "0.17.2",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^1.1.3",
    "chalk": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.5.9",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^12.2.2",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.2",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2"
  }
}
